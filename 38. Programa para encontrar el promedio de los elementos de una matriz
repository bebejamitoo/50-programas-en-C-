using System;

class Program
{
    static void Main()
    {
        int[,] mat = {
            {1, 2, 3},
            {4, 5, 6},
            {7, 8, 9}
        };

        int suma = 0;
        int contador = 0;

        foreach (int num in mat)
        {
            suma += num;
            contador++;
        }

        double promedio = (double)suma / contador;
        Console.WriteLine("El promedio de los elementos de la matriz es: " + promedio);
    }
}
