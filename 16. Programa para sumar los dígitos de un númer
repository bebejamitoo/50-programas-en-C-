using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Ingrese un número:");
        int num = Convert.ToInt32(Console.ReadLine());
        int suma = 0;

        while (num != 0)
        {
            suma += num % 10;
            num /= 10;
        }

        Console.WriteLine("La suma de los dígitos es: " + suma);
    }
}
